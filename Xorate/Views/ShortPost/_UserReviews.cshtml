@model ShortPostReviewViewModel

<h3>Напишите отзыв</h3>
<div id="spinner" style="display:none;">Загрузка..</div>
<div id="updateDiv"></div>
<form asp-controller="ShortPost" asp-action="ShortPostReview" data-ajax-loading="#spinner" data-ajax-update="#updateDiv" data-ajax="true">
    <input type="hidden" asp-for="PostId" />
    <div class="rating">
        <span asp-validation-for="Ranking" class="text-danger"></span>
        <input type="number" asp-for="Ranking" hidden value="1" />
        <i class='bi bi-star star' style="--i: 0;"></i>
        <i class='bi bi-star star' style="--i: 1;"></i>
        <i class='bi bi-star star' style="--i: 2;"></i>
        <i class='bi bi-star star' style="--i: 3;"></i>
        <i class='bi bi-star star' style="--i: 4;"></i>
    </div>
    <div class="mb-2">
        <span asp-validation-for="Name" class="text-danger"></span>
        <input asp-for="Name" placeholder="Ваше имя..." />
    </div>
    <span asp-validation-for="Description" class="text-danger"></span>
    <textarea asp-for="Description" cols="30" rows="5" placeholder="Ваше мнение..."></textarea>
    <div class="btn-group">
        @Html.AntiForgeryToken()
        <button type="submit" class="btn submit">Отправить</button>
    </div>
</form>
