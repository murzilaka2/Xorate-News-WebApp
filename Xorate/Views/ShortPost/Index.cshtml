@{
    ViewData["Title"] = "Рейтинг всего на земле";
    string pageUrl = @Url.Action(action: "Index", controller: "ShortPost", null, protocol: "https");
}
@section MetaTags {
    <meta name="description" content="Земля - это всего лишь симуляция. К счастью, создатели и обитатели всегда ищут отзывы.">
    <meta name="keywords" content="xorate">
    <meta property="og:locale" content="ru_RU">
    <meta property="og:url" content="@pageUrl">
    <meta property="og:type" content="article">
    <meta property="og:title" content="Рейтинг всего на земле">
    <meta property="og:description" content="Земля - это всего лишь симуляция. К счастью, создатели и обитатели всегда ищут отзывы.">
    <link href="Xorate.styles.css" rel="stylesheet" type="text/css">
    <link rel="alternate" hreflang="ru-RU" href="@pageUrl" />
    <link rel="stylesheet" href="~/assets/css/rating.css" type="text/css" media="all">
}

@model IEnumerable<ShortPost>

<div class="blog-list-section">

    <div class="container post-container">
        <div class="row posts">
            <div class="col-lg-12">
                <div class="row">

                    <div class="section-title wow fadeInRight animated mt-2" style="visibility: visible; animation-name: fadeInRight;">
                        <h1>Рейтинг всего на земле</h1>
                        <h5>Земля - это всего лишь симуляция. К счастью, создатели и обитатели всегда ищут отзывы.</h5>
                    </div>

                    @foreach (ShortPost post in Model)
                    {
                        <div class="col-lg-3">
                            <div class="case-study-box-inner">
                                <div class="case-study-content">
                                    <div class="case-study-content-inner">
                                        <a href="@Url.Action(action: "GetItem", controller: "ShortPost", values: new { path = post.Path }, protocol: "https")">
                                            @post.Title
                                        </a>
                                        @await Html.PartialAsync("_Ranking", post.Ranking)
                                        <div class="case-study-text-icon"></div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>

        <!-- Pagionation Section  -->
        @await Html.PartialAsync("_Pages", Model)
        <!-- Pagionation Section End -->

    </div>
</div>



