@using Xorate.Components
@model GetPostViewModel
@{
    ViewData["Title"] = Model.Post.Title;
}
@section MetaTags
{
    <link rel="stylesheet" href="~/assets/css/table.css" type="text/css" media="all">
}


<div class="blog-details-section mob">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="single-blog-details-box">
                    <div class="blog-details-content wow fadeInLeft animated" style="visibility: visible; animation-name: fadeInLeft;">
                        <div class="meta-blog-details">
                            <ul>
                                <li title="Дата публикации"><i aria-hidden="true" class="far fa-calendar-alt"></i> @Model.Post.CreatedDate.ToString("dd MMMM, yyyy")</li>
                                <li title="Комментариев"><i class="bi bi-chat-left-dots"></i> <a href="#comments">@Model.CommentsCount</a></li>
                            </ul>
                        </div>
                        <div class="blog-details-title">
                            <a href="@Url.Action(action: "GetPost", controller: "Home",
								values: new { path = Model.Post.Path }, protocol: "https")">@Model.Post.Title</a>
                        </div>
                    </div>

                    <article class="mb-5">
                        @Html.Raw(Model.Post.Description)
                    </article>

                    <div class="blog-details-button">
                        <a href="blog-details.html#">Branding</a>
                        <a href="blog-details.html#">JavaScript</a>
                        <a href="blog-details.html#">Science</a>
                    </div>

                    <div class="blogs-share wow fadeInLeft animated" style="visibility: visible; animation-name: fadeInLeft;">
                        <span class="share-text">Поделиться :</span>
                        <ul class="social-share-icon">
                            <li><a href="blog-details.html#"><i class="fab fa-linkedin-in"></i></a></li>
                            <li><a href="blog-details.html#"><i class="fab fa-vimeo-v"></i></a></li>
                            <li><a href="blog-details.html#"><i class="bi bi-twitter"></i></a></li>
                            <li><a href="blog-details.html#"><i class="bi bi-youtube"></i></a></li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @* Для работы Blazor *@
    <script src="_framework/blazor.server.js"></script>
    <script src="~/assets/js/video/platform.js"></script>
}