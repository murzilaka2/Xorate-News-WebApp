<div class="row">
    <div class="col-lg-12">
        <div class="pagination-menu wow fadeInLeft">
            <form id="pageform" method="get">
                <ul>
                    <li>
                        <button name="page" value="@(Model.CurrentPage - 1)"
                                class="btn btn-outline-primary @(!Model.HasPreviousPage ? "disabled" : "")" type="submit">
                            <i class="bi bi-chevron-left"></i>
                        </button>
                    </li>
                    @for (int i = 1; i <= 2 && i <= Model.TotalPages; i++)
                    {
                        <li>
                            <button name="page" value="@i" type="submit"
                                    class="btn btn-outline-primary @(Model.CurrentPage == i ? "active" : "")">
                                @i
                            </button>
                        </li>
                    }
                    @if (Model.CurrentPage > 2 && Model.TotalPages - Model.CurrentPage >= 2)
                    {
                        @:...
                        <li>
                            <button class="btn btn-outline-primary active">@Model.CurrentPage</button>
                        </li>
                    }
                    @if (Model.TotalPages > 2)
                    {
                        @:...
                        @for (int i = Math.Max(3, Model.TotalPages - 1); i <= Model.TotalPages; i++)
                        {
                            <li>
                                <button name="page" value="@i" type="submit"
                                        class="btn btn-outline-primary @(Model.CurrentPage == i ? "active" : "")">
                                    @i
                                </button>
                            </li>
                        }
                    }
                    <li>
                        <button name="page" value="@(Model.CurrentPage + 1)" type="submit"
                                class="btn btn-outline-primary @(!Model.HasNextPage ? "disabled":"")">
                            <i class="bi bi-chevron-right"></i>
                        </button>
                    </li>
                </ul>
            </form>
        </div>
    </div>
</div>

