<!DOCTYPE html>
<html lang="ru">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <meta property="og:type" content="website">
    <meta property="og:site_name" content="Xorate">
    <meta name="author" content="Xorate">
    @await RenderSectionAsync("MetaTags", required: false)
    @await Html.PartialAsync("_Styles")
</head>
<body>

    <!-- Header-top-menu  -->
    <div class="header-top-section">
        <div class="container">
            <div class="row align-items-center">
                <div class="col-lg-8">
                    <div class="header-top-menu-address">
                        <ul>
                            <li><a href="mailto:info@dijix.com.ua"><i class="bi bi-mailbox"></i>info@dijix.com.ua</a></li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- Header-top-menu End -->
    <!--  Main Menu  -->
    <div id="sticky-header" class="_nav_manu">
        <div class="container">
            <div class="row up align-items-center">
                <div class="col-lg-2">
                    <div class="logo">
                        <a class="logo_img" href="/" title="">
                            <img src="~/assets/images/resource/logo.png" alt="xorate logo">
                        </a>
                        <a class="main_sticky" href="/" title="">
                            <img src="~/assets/images/resource/logo.png" alt="xorate logo">
                        </a>
                    </div>
                </div>
                <div class="col-lg-10">
                    <nav class="_menu">
                        <ul class="nav_scroll">
                            <li><a href="/" class="up">Главная</a></li>
                            <li><a href="/ratings" class="up">Рейтинг</a></li>
                            <li>
                                <a href="/sitemap">
                                    Карта
                                    <span><i class="fas fa-chevron-down"></i></span>
                                </a>
                                <ul class="sub-menu">
                                    <li><a href="/xorate-cenim-mnenie" class="up">Компания</a></li>
                                </ul>
                            </li>
                            <li>
                                @await RenderSectionAsync("Search", required: false)
                            </li>
                        </ul>
                        <div class="header-button">
                            <a href="/create">Создать запись</a>
                        </div>
                    </nav>
                </div>
            </div>
        </div>
    </div>
    <!--  Main Menu End -->
    <!--  Mobile Menu  -->
    <div class="mobile-menu-area sticky d-sm-block d-md-block d-lg-none ">
        <div class="mobile-menu">
            <nav class="_menu">
                <ul class="nav_scroll">
                    <li><a href="/" class="up">Главная</a></li>
                    <li><a href="/ratings" class="up">Рейтинг</a></li>
                    <li>
                        <a href="/sitemap">
                            Карта
                        </a>
                        <ul class="sub-menu">
                            <li><a href="/xorate-cenim-mnenie" class="up">Компания</a></li>
                        </ul>
                    </li>
                    <li><a class="c-mobile" href="/create">Создать запись</a></li>
                </ul>
            </nav>
            @await RenderSectionAsync("SearchMobile", required: false)
        </div>
    </div>
    <!--  Mobile Menu End -->
    <!-- Blog Section -->
    @RenderBody()
    <!-- Blog Section End -->
    <!-- Start footer Section -->
    <div class="footer-section">
        <div class="container">
            <div class="row">
                <div class="col-lg-6 col-md-6">
                    <div class="footer-logo wow fadeInLeft">
                        <img src="~/assets/images/resource/footer-logo.png" alt="xorate logo">
                    </div>
                    <div class="footer-widget-description wow fadeInLeft">
                        <p>
                            Оценивайте и сравнивайте лучшие товары, услуги, фильмы, рестораны
                            и туристические места по всему миру.
                            Доверяйте независимым отзывам и выбирайте лучшее!
                        </p>
                        <p>
                            <a href="/" class="logo-link">Xorate</a>
                            - объективная информация для вашего выбора.
                        </p>
                    </div>
                </div>
                <div class="col-lg-6 col-md-6">
                    <div class="footer-widget-description wow fadeInLeft">
                        <p>
                            <a href="/" class="up">Главная</a><br />
                            <a href="/ratings">Рейтинг</a><br />
                            <a href="/xorate-cenim-mnenie">Компания</a><br />
                            <a href="/sitemap" target="_blank">Карта</a><br />
                            <a href="/create">Создать запись</a>
                        </p>
                    </div>
                </div>
            </div>
        </div>
        <div class="footer-bottom-area">
            <div class="container">
                <div class="row">
                    <div class="col-lg-12">
                        <div class="copyright-description text-center wow fadeInLeft">
                            <p>Copyright @DateTime.Now.Year. All Rights Reserved</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- Footer Section End -->
    <!-- Scrollup section Section -->
    <div class="prgoress_indicator active-progress">
        <svg class="progress-circle svg-content" width="100%" height="100%" viewBox="-1 -1 102 102">
            <path d="M50,1 a49,49 0 0,1 0,98 a49,49 0 0,1 0,-98" style="transition: stroke-dashoffset 10ms linear 0s; stroke-dasharray: 307.919, 307.919; stroke-dashoffset: 270.456;"></path>
        </svg>
    </div>

    <!-- Scrollup section Section End -->
    @await Html.PartialAsync("_Scripts")
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
